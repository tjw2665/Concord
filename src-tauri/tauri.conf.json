  "productName": "Concord",
  "version": "0.2.0",
  "identifier": "com.concord.im",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run protocol:build && npm run bundle:sidecar && npm run build"
  },
  "app": {
    "security": {},
